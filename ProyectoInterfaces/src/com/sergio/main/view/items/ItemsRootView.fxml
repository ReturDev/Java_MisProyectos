<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sergio.main.controller.items.ItemsRootController">
   <content>
      <VBox alignment="TOP_CENTER">
         <children>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <children>
                  <TextField fx:id="tfSearch" maxWidth="350.0" onKeyReleased="#onPressEnter" prefHeight="30.0" promptText="Buscar..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnSearch" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onSearch">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <FlowPane fx:id="itemsRoot" alignment="TOP_CENTER" columnHalignment="CENTER" hgap="50.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" rowValignment="TOP" vgap="50.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="100.0">
               <children>
                  <Button fx:id="btnPreviousPage" contentDisplay="GRAPHIC_ONLY" disable="true" mnemonicParsing="false" onAction="#onPreviousPage">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/resources/icons/content/black_arrow_left_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnNextPage" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onNextPage">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/resources/icons/content/black_arrow_right_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
