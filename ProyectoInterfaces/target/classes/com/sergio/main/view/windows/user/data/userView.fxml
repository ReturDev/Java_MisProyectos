<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootUserView" alignment="TOP_CENTER" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sergio.main.controller.windows.user.data.UserController">
   <children>
      <AnchorPane>
         <children>
            <VBox alignment="CENTER" layoutX="250.0" maxWidth="1.7976931348623157E308" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0">
               <children>
                  <ImageView fx:id="ivUserImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <Label fx:id="lblUserName" text="Nombre Usuario" />
               </children>
            </VBox>
            <Button contentDisplay="GRAPHIC_ONLY" layoutX="633.5999755859375" mnemonicParsing="false" onAction="#onLogout" text="Button" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <TabPane fx:id="tabRoot" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="tabAnime" closable="false" text="Anime">
               <content>
                  <VBox fx:id="rootTabAnime" prefHeight="200.0" prefWidth="100.0" />
               </content>
          </Tab>
          <Tab fx:id="tabManga" closable="false" text="Manga">
               <content>
                  <VBox fx:id="rootTabManga" prefHeight="200.0" prefWidth="100.0" />
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
